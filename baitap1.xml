<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/i15" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AndroidCamp"
            android:id="@+id/text12310"
            android:layout_gravity="left"
            android:textColor="#FAFAFA"
            android:textSize="35dp"
            android:background="#8BC34A"
    />
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/logo_small"
            android:layout_gravity="center"



    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Android"
            android:id="@+id/text123"
            android:layout_gravity="center"
            android:textColor="#8BC34A"
            android:textSize="35dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sign in to continue"
              android:id="@+id/text1234"
              android:layout_gravity="center"
              android:textSize="15dp"

    />
    <TextView android:layout_width="359dp"
              android:layout_height="wrap_content"
              android:text="USERNAME"
              android:id="@+id/text1235"
              android:layout_gravity="center"
              android:textSize="10dp"

    />
    <EditText android:layout_width="359dp"
              android:layout_height="wrap_content"
              android:text=""
              android:hint="Enter your Username"
              android:id="@+id/text1236"
              android:layout_gravity="center"
              android:textSize="10dp"

    />
    <TextView android:layout_width="359dp"
              android:layout_height="wrap_content"
              android:text="PASSWORD"
              android:id="@+id/text1237"
              android:layout_gravity="center"
              android:textSize="10dp"

    />
    <EditText android:layout_width="359dp"
              android:layout_height="wrap_content"
              android:text=""
              android:hint="Enter your password"
              android:id="@+id/text1238"
              android:layout_gravity="center"
              android:textSize="10dp"

              tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>


    <Button
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#FAFAFA"
            android:layout_gravity="center"
            android:background="@drawable/goctron"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="SIGN UP FOR AN ACCOUNT?"
              android:id="@+id/text1239"
              android:layout_gravity="center"
              android:textSize="10dp"

    />
</LinearLayout>


